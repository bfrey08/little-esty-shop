<h1>Update Item Information</h1>

<%= form_with url: merchant_item_path(@merchant, @item), method: :patch, local: true do |form| %>
<%= form.hidden_field :item_update %>
<%= form.label :name %>
<%= form.text_field :name, value:@item.name %>
<%= form.label :description %>
<%= form.text_field :description, value:@item.description %>
<%= form.label :unit_price %>
<%= form.text_field :unit_price, value:@item.unit_price %>
<%= form.submit "Submit Changes" %>
<% end %>