<h1>Edit Discount</h1>

<%= form_with url: "/merchants/#{@merchant.id}/discounts/#{@merchant_discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value:@merchant_discount.name%><br/><br/>
  <%= f.label :percentage %>
  <%= f.text_field :percentage, value:@merchant_discount.bulk_discount.percentage %><br/><br/>
  <%= f.label :threshold %>
  <%= f.text_field :threshold, value:@merchant_discount.bulk_discount.threshold %><br/><br/>
  <%= f.submit 'Update Discount' %>
<% end %>
